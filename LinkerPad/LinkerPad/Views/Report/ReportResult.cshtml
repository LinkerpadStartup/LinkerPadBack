@model LinkerPad.Models.Report.ReportViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="fa" dir="rtl">
<head>
    <meta name="viewport" content="width=device-width", initial-scale="1.0" charset="UTF-8">
    <title>گزارش روزانه</title>
    <style>

        div.container {
            width: 100%;
            border: 1px solid gray;
        }

        Title {
            font-family: "BMitra";
            color: #FFF;
            width: 100%;
            float: right;
            margin: 20px;
        }

            header {
            padding: 1em;
            color: black;
            background-color: dodgerblue;
            clear: left;
            text-align: center;
        }

        img {
            width: 128px;
            height: 128px;
            float: left;
            margin-top: 0
        }
                
        footer {
            padding: 1em;
            color: white;
            background-color: aliceblue;
            clear: left;
            text-align: center;
        }

        table.tb01 {
            border: 1px solid #757576;
            font-family: ' BMitra';
            border-collapse: collapse;
            text-align: center;
            font-family: BMitra;
            font-size: 14px;
            padding: 15px;
            border: none;
        }

        th {
            background-color: #E9E8E9;
            font-size: 14px;
            font-weight: bold;
        }
              
        table {
            width: 90%;
            margin: 0 auto;
            font-family: BMitra;
        }

        caption {
            text-align: center; 
            margin-bottom: 5px;
            font-size: 20px;
            padding: 5px;
            font-weight: bold;
            font-family: BMitra;
            color: #155EAC;
        }

    </style>

</head>

<body>
    <header>
        <div class="container">
            <div class="title">
                <h1>گزارش روزانه پروژه ....</h1> <br />
                <h2>... شرکت</h2> <br />
                <h3> تاریخ</h3>
            </div>
            <div class="img">

                <img src="...." alt="نام پروژه">
</header>

    <div class="container">
        @foreach (var dailyActivityViewModel in Model.DailyActivitesViewModel)
            {
        <div class="container">
       
            <table class="tb01">
                <caption>فعالیت های انجام شده</caption>
                <tr>
                    <th>عنوان</th>
                    <th>توضیحات</th>
                    <th>مقدار کار</th>
                    <th>واحد</th>
                    <th>تعداد نفرات</th>
                    <th>ساعت</th>
                </tr>
                <tr>
                    <td>@dailyActivityViewModel.Title</td>
                    <td>@dailyActivityViewModel.Description</td>
                    <td>@dailyActivityViewModel.Workload</td>
                    <td>@dailyActivityViewModel.WorkloadUnit</td>
                    <td>@dailyActivityViewModel.NumberOfCrew</td>
                    <td>@dailyActivityViewModel.WorkHours</td>
                 </tr>
            </table>
        </div>
           }
      </div>

    <div class="container">
        @foreach (var equipmentViewModel in Model.EquipmentViewModel)
            {
            <div class="container">

                <table class="tb01">
                    <caption>فعالیت های انجام شده</caption>
                    <tr>
                        <th>عنوان</th>
                        <th>تعداد فعال</th>
                        <th>ساعت</th>
                        <th>تعداد غیر فعال</th>
                        <th>توضیحات</th>
                    </tr>
                    <tr>
                        <td>@equipmentViewModel.Title</td>
                        <td>@equipmentViewModel.NumberOfActiveEquipment</td>
                        <td>@equipmentViewModel.WorkHours</td>
                        <td>@equipmentViewModel.NumberOfDeactiveEquipment</td>
                        <td>@equipmentViewModel.Description</td>
                    </tr>
                </table>
            </div>
        }
    </div>
    
    <div class="container">
         @foreach (var materialViewModel in Model.MaterialsViewModel)
            {
            <div class="container">

                <table class="tb01">
                    <caption>مصالح</caption>
                    <tr>
                        <th>عنوان</th>
                        <th>مقدار مصرفی</th>
                        <th>واحد</th>
                        <th>توضیحات</th>
                    </tr>
                    <tr>
                        <td>@materialViewModel.Title</td>
                        <td>@materialViewModel.ConsumedQuantity</td>
                        <td>@materialViewModel.ConsumedQuantityUnit</td>
                        <td>@materialViewModel.Description</td>
                    </tr>
                </table>
            </div>
        }
    </div>

    <footer>
        <p style="font-family:'B Nazanin';font-size:x-large;text-align:right;color:white">نام پروژه</p>
        <img src="http://31.184.132.134/C/inetpub/wwwroot/LinkerPad/Views/Report/linkerpadlogo.png" alt="لینکرپد" style="float:left;width:128px;height:128px;">
    </footer>


